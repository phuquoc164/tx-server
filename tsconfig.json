{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "noImplicitThis": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/uploads/*",
        ".git",
        "node_modules",
    ]
}